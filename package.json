{
  "name": "ai-voice-agent-debt-recovery",
  "version": "1.0.0",
  "description": "AI voice agent for small-business debt recovery using Vapi",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "deploy": "node scripts/deploy-assistant.js",
    "test:tools": "node scripts/test-tools.js",
    "build:vapi": "npx esbuild src/vapi-browser.js --bundle --outfile=public/vapi-bundle.js --format=iife --global-name=VapiModule",
    "postinstall": "npm run build:vapi"
  },
  "keywords": [
    "vapi",
    "voice-agent",
    "debt-recovery",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vapi-ai/web": "^2.5.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "nodemon": "^3.0.2"
  }
}
